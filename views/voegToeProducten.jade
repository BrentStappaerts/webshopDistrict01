extends layout

block content 
	div(id='banner')

	ul
		li 
			a(href='/')#create-account Home
		if user
			li 
				a(href='/overzicht')#create-account Producten
		li 
			a(href='/OverOns')#create-account Over ons
		li 
			a(href='/contact')#create-account Contact
		if !user
			li 
				a(href='/login')#create-account Inloggen

			li
				a(href='/signup')#create-account Registreren
		else
			li 
				a(href='/signout')#create-account Uitloggen
			li
				p Welkom #{user.username} !

	div(class='container')
		form(id="addForm" enctype="multipart/form-data" action="/api/photo" method="post")
			label Product
			select(id="product" name="product" class="form-control")
				option(value="") Kies een product
				option(value="computer") Computer
				option(value="laptop") Laptop
				option(value="tablet") Tablet
				option(value="accessories") Accessories
			label Merk
			input(type="text" id="merk" name="merk" class="form-control" required)
			label Type
			input(type="text" id="type" name="type" class="form-control" required)
			label Foto
			input(type="file" id="foto" name="foto" class="form-control" required)
			label Prijs
			input(type="text" id="prijs" name="prijs" class="form-control" required)
			br
			button(type="submit" class="btn" id="addBtn") Product toevoegen

	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="../javascripts/script.js")
	script(src="/socket.io/socket.io.js")
	script.
		$(document).ready(function(){
			if(#{user.admin} === false)
			{
				window.location.href='/overzicht';
			}
		});