extends layout

block content
	div(id='banner')

	ul
		li 
			a(href='/') Home
		if user
			li 
				a(href='/overzicht') Producten

				if !user.admin
					li
						a(href='/MijnBestellingen') Mijn bestellingen

				if user.admin
					li
						a(href='/bestellingen') Bestellingen


		li 
			a(href='/OverOns') Over ons
		li 
			a(href='/contact') Contact

		if !user
			li 
				a(href='/login') Inloggen
			li
				a(href='signup') Registreren
			li
				<div id="opnav"></div>

		else
			li 
				a(href='/signout') Uitloggen

		if user
			li
				<div id="opnav"> Ingelogd als #{user.firstname}</div>

	div(class='container')
		h1 Registreren
		p(class='lead') Dit kan snel en eenvoudig ..
		br
		form(action='/signup', name='signupForm', method='POST', style='max-width: 300px')
			div(class='form-group')
				input(class='form-control', type='email', name='username', id='username', placeholder='Username')
			div(class='form-group')
				input(class='form-control', type='password', name='password', id='password', placeholder='Password')
			div(class='form-group')
				input(class='form-control', type='text', name='firstname', id='firstname', placeholder='First name')
			div(class='form-group')
				input(class='form-control', type='text', name='lastname', id='lastname', placeholder='Last name')
			div(class='form-group')
				input(class='form-control', type='text', name='address', id='address', placeholder='Address')
			input(class='btn btn-default', type='submit', value='Sign up')
			&nbsp;
			a(href="/login") Ik heb al een account.


	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")