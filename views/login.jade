extends layout

block content
	div(id='banner')
	
	ul
		li 
			a(href='/') Home
		if user
			li 
				a(href='/overzicht') Producten

				if !user.admin
					li
						a(href='/MijnBestellingen') Mijn bestellingen

				if user.admin
					li
						a(href='/bestellingen') Bestellingen


		li 
			a(href='/OverOns') Over ons
		li 
			a(href='/contact') Contact

		if !user
			li 
				a(href='/login') Inloggen
			li
				a(href='signup') Registreren
			li
				<div id="opnav"></div>

		else
			li 
				a(href='/signout') Uitloggen

		if user
			li
				<div id="opnav"> Ingelogd als #{user.firstname}</div>

	div(class='container')
		h1 Inloggen
		p.lead Profiteer van ons ruime aanbod!
		br
		form(action='/login', name='loginForm', method='POST', style='max-width: 300px')
			div(class='form-group')
				input(class='form-control', type='email', name='username', id='username', placeholder='Username')
			div(class='form-group')
				input(class='form-control', type='password', name='password', id='password', placeholder='Password')
			input(class='btn btn-default', type='submit', value='Log in')
			br
			br
			a(href="/signup") Ik heb nog geen account.

	script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(src="/javascripts/script.js")
	script(src="/socket.io/socket.io.js")